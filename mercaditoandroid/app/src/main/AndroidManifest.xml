<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mercaditoandroid"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Mercaditoandroid.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CatalogActivity"
            android:exported="true"
            android:label="@string/catalog_activity_label"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/Theme.Mercaditoandroid.NoActionBar">
            <!-- Configuración de navegación -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CartActivity"
            android:exported="true"
            android:label="@string/cart_activity_label"
            android:theme="@style/Theme.Mercaditoandroid.NoActionBar">
        </activity>

        <activity
            android:name=".OrderHistoryActivity"
            android:exported="true"
            android:label="@string/order_history_activity_label"
            android:theme="@style/Theme.Mercaditoandroid.NoActionBar">
        </activity>

        <activity
            android:name=".OrderDetailsActivity"
            android:exported="true"
            android:label="@string/order_details_activity_label"
            android:theme="@style/Theme.Mercaditoandroid.NoActionBar">
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:label="@string/register_activity_label"
            android:theme="@style/Theme.Mercaditoandroid.NoActionBar">
        </activity>

    </application>

</manifest>