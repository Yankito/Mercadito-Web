<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageProductCart"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/placeholder_image"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="start"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/textTitleCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TÃ­tulo del Producto"
            android:textSize="16sp"
            android:textColor="?attr/colorOnSecondary"/>

        <TextView
            android:id="@+id/textPriceCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio: $0"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSecondary"/>

        <Button
            android:id="@+id/buttonRemoveFromCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eliminar del carro"/>
    </LinearLayout>
</LinearLayout>
